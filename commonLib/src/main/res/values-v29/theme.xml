<resources>

	<style name="MyAppTheme" parent="MyBaseTheme">

		<item name="android:colorPrimary">?attr/colorPrimary</item> <!-- app branding color for the app bar -->
		<item name="android:colorPrimaryDark">?attr/colorPrimaryDark</item> <!-- darker variant for the status bar and contextual app bars -->
		<item name="android:colorSecondary">?attr/colorAccent</item>

		<!-- theme UI controls action bar -->
		<item name="android:actionBarTheme">@style/MyActionBarTheme</item>

		<!-- toolbars -->
		<item name="android:toolbarStyle">@style/MyToolbarStyle</item>

		<!-- force dark mode -->
		<item name="android:forceDarkAllowed">false</item>

	</style>

</resources>