<resources>

	<!-- must override -->
	<style name="MyBaseTheme"/>
	<!--<style name="MyBaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar"/>-->
	<!--<style name="MyBaseTheme" parent="Theme.MaterialComponents.NoActionBar"/>-->

	<style name="MyXBaseTheme" parent="MyBaseTheme"/>

	<style name="MyTheme" parent="MyXBaseTheme">

		<item name="colorPrimary">@color/default_primaryColor</item><!-- app branding color for the app bar -->
		<item name="colorPrimaryDark">@color/default_primaryDarkColor</item><!-- darker variant for the status bar and contextual app bars -->
		<item name="colorAccent">@color/default_secondaryColor</item><!-- theme UI controls like checkboxes and text fields -->

		<item name="colorPrimaryLight">@color/default_primaryLightColor</item>
		<item name="colorSecondary">@color/default_secondaryColor</item>
		<item name="colorSecondaryLight">@color/default_secondaryLightColor</item>
		<item name="colorSecondaryDark">@color/default_secondaryDarkColor</item>

		<item name="colorForePrimary">@color/default_primaryForeColor</item>
		<item name="colorForeSecondary">@color/default_secondaryForeColor</item>
		<item name="colorForeTertiary">@color/default_tertiaryForeColor</item>

		<!-- action bar -->
		<item name="android:actionBarStyle">@style/MyActionBar</item>

		<!-- theme UI controls action bar -->
		<item name="actionBarTheme">@style/MyActionBarOverlay</item>

		<!-- theme UI controls pop ups -->
		<item name="actionBarPopupTheme">@style/MyOverlay</item>

		<!-- dropdowns -->
		<item name="android:dropDownListViewStyle">@style/MyDropDownListViewStyle</item>
		<item name="android:dropDownItemStyle">@style/MyDropDownItemStyle</item>

		<!-- preferences -->
		<item name="preferenceTheme">@style/PreferenceCompatTheme</item>

		<!-- TREEBOLIC attributes (used within widget) -->

		<!-- treebolic colors -->
		<item name="treebolic_toolbar_background">?attr/colorPrimary</item>
		<item name="treebolic_toolbar_foreground_icon">?attr/colorForeSecondary</item>

		<item name="treebolic_statusbar_background">?attr/colorPrimary</item>
		<item name="treebolic_statusbar_foreground">?attr/colorForeSecondary</item>
		<item name="treebolic_statusbar_foreground_enhanced">?attr/colorForePrimary</item>
		<item name="treebolic_statusbar_foreground_icon">?attr/colorForePrimary</item>

		<item name="treebolic_dialog_background">?attr/colorPrimary</item>
		<item name="treebolic_dialog_foreground">?attr/colorForeSecondary</item>
		<item name="treebolic_dialog_foreground_enhanced">?attr/colorForePrimary</item>
		<item name="treebolic_dialog_foreground_icon">?attr/colorForePrimary</item>

		<item name="treebolic_splitbar_color">?attr/colorPrimaryDark</item>
		<item name="treebolic_splitbar_drag_color">?attr/colorAccent</item>

		<item name="treebolic_splash_background">?attr/colorPrimary</item>
		<item name="treebolic_splash_foreground">?attr/colorForePrimary</item>
		<item name="treebolic_splash_progress">?attr/colorSecondary</item>

		<!-- treebolic search settings colors -->
		<item name="treebolic_search_settings_background">?attr/colorPrimary</item>
		<item name="treebolic_search_settings_foreground">?attr/colorForePrimary</item>

		<!-- treebolic widget colors -->
		<item name="treebolic_back_color">#adc1cc</item> <!-- #f3f1e2 #9eb0ba -->
		<item name="treebolic_tree_edge_color">#cccccc</item>
		<item name="treebolic_root_background_color">#0000ff</item>
		<item name="treebolic_root_foreground_color">#ffffff</item>
		<item name="treebolic_node_background_color">#ffffff</item>
		<item name="treebolic_node_foreground_color">#000000</item>

	</style>

</resources>