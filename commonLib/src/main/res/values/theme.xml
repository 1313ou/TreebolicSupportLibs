<resources>

	<!-- must override -->
	<style name="MyBaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar" />

	<style name="MyXBaseTheme" parent="MyBaseTheme" />

	<style name="MyTreebolicBaseTheme" parent="MyXBaseTheme">

		<!-- treebolic widgets -->

		<item name="treebolic_toolbar_background">?attr/colorPrimary</item>
		<item name="treebolic_toolbar_foreground_icon">?attr/colorForeTertiary</item>

		<item name="treebolic_statusbar_background">?attr/colorPrimary</item>
		<item name="treebolic_statusbar_foreground">?attr/colorForeSecondary</item>
		<item name="treebolic_statusbar_foreground_enhanced">?attr/colorForePrimary</item>
		<item name="treebolic_statusbar_foreground_icon">?attr/colorForePrimary</item>

		<item name="treebolic_dialog_background">?attr/colorPrimary</item>
		<item name="treebolic_dialog_foreground">?attr/colorForeSecondary</item>
		<item name="treebolic_dialog_foreground_enhanced">?attr/colorForePrimary</item>
		<item name="treebolic_dialog_foreground_icon">?attr/colorForePrimary</item>

		<item name="treebolic_splitbar_color">?attr/colorPrimaryDark</item>
		<item name="treebolic_splitbar_drag_color">?attr/colorAccent</item>

		<item name="treebolic_splash_background">?attr/colorPrimary</item>
		<item name="treebolic_splash_foreground">?attr/colorForePrimary</item>
		<item name="treebolic_splash_progress">?attr/colorSecondary</item>

		<!-- treebolic search settings colors -->
		<item name="treebolic_search_settings_background">?attr/colorPrimary</item>
		<item name="treebolic_search_settings_foreground">?attr/colorForePrimary</item>

	</style>

	<!-- T H E M E -->
	<style name="MyTreebolicTheme" parent="MyTreebolicBaseTheme">

		<!-- theme UI controls action bar -->
		<item name="actionBarTheme">@style/MyActionBarOverlay</item>

		<!-- theme UI controls pop ups -->
		<item name="actionBarPopupTheme">@style/MyOverlay</item>

		<!-- preference -->
		<item name="preferenceTheme">@style/MyPreference</item>

		<!-- alert dialog -->
		<item name="alertDialogTheme">@style/MyAlertDialog</item>

		<!-- spinner -->
		<item name="android:dropDownListViewStyle">@style/MySpinnerDropDown</item>
		<item name="android:spinnerStyle">@style/MySpinner</item>
		<item name="spinnerStyle">@style/MySpinner</item>

	</style>

	<style name="MyTheme" parent="MyTreebolicDefaultTheme" />

</resources>