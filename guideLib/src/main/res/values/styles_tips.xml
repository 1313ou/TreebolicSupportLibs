<resources>

	<style name="tips">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">20dp</item>
		<item name="android:shrinkColumns">1,2</item>
		<!-- <item name="android:collapseColumns">1</item> -->
	</style>

	<style name="tipHeader">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="tipButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:tint">@android:color/black</item>
		<item name="android:gravity">right</item>
		<item name="android:background">@null</item>
	</style>

	<style name="tip">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">5dip</item>
	</style>

	<style name="tipGesture">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:singleLine">false</item>
		<item name="android:lines">3</item>
		<item name="android:maxLines">4</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingRight">5dip</item>
	</style>

	<style name="tipImage">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:tint">@android:color/black</item>
		<item name="android:paddingLeft">5dip</item>
		<item name="android:paddingRight">5dip</item>
		<item name="android:minWidth">50dp</item>
		<item name="android:minHeight">50dp</item>
	</style>

	<style name="tipEffect">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:singleLine">false</item>
		<item name="android:lines">3</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:maxLines">4</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingLeft">5dip</item>
		<item name="android:paddingRight">5dip</item>
		<item name="android:paddingTop">5dip</item>
		<item name="android:paddingBottom">5dip</item>
	</style>

</resources>